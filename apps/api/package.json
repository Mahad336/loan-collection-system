{
  "name": "@collections/api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "nest build",
    "postbuild": "node scripts/postbuild.js",
    "start": "node dist/apps/api/src/main.js",
    "start:dev": "concurrently -k \"nest build --watch\" \"npx wait-on dist/apps/api/src/main.js -t 60000 && npx nodemon --watch dist --delay 2 dist/apps/api/src/main.js\"",
    "start:debug": "nest start --debug --watch",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "dotenv -e ../../.env -- prisma migrate deploy",
    "prisma:seed": "dotenv -e ../../.env -- ts-node prisma/seed.ts",
    "prisma:studio": "dotenv -e ../../.env -- prisma studio"
  },
  "dependencies": {
    "@collections/shared": "*",
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/schedule": "^4.0.0",
    "@nestjs/swagger": "^7.2.0",
    "dotenv": "^16.4.5",
    "@prisma/client": "^5.9.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "puppeteer": "^21.7.0",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1"
  },
  "prisma": {
    "seed": "dotenv -e ../../.env -- ts-node prisma/seed.ts"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.2",
    "dotenv-cli": "^7.4.2",
    "nodemon": "^3.1.0",
    "wait-on": "^7.2.0",
    "prisma": "^5.9.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
